                              <Label fx:id="lblContactPerson" layoutX="305.0" layoutY="112.0" text="*" textFill="#b91818">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <TextArea fx:id="txtContactPerson" layoutX="108.0" layoutY="111.0" prefHeight="80.0" prefWidth="190.0" />
                              <Label layoutX="-20.0" layoutY="207.0" text="Contact Number:">
